<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="soumya.myaccountmanager.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:background="#1EB1FF"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/txt_budget"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_marginLeft="20sp"
            android:text="BUDGET"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/det_budget"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:background="#DDDDDD"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txt_spent"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:paddingTop="10dp"
            android:layout_marginLeft="20sp"
            android:layout_below="@id/txt_budget"
            android:text="SPENT"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/det_spent"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:paddingTop="10dp"
            android:background="#DDDDDD"
            android:textColor="#000000"
            android:layout_below="@id/txt_budget"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txt_balance"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:paddingTop="10dp"
            android:layout_marginLeft="20sp"
            android:layout_below="@id/txt_spent"
            android:text="BALANCE"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/det_balance"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:paddingTop="10dp"
            android:background="#DDDDDD"
            android:textColor="#000000"
            android:layout_below="@id/txt_spent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="TO DO LIST"
        android:id="@+id/button_todo"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="BILLS"
        android:id="@+id/button_bills"
        android:layout_below="@+id/button_todo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="FINANCIAL GOALS"
        android:id="@+id/button_finance"
        android:layout_below="@+id/button_bills"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="EXPENSES"
        android:id="@+id/button_expense"
        android:layout_below="@+id/button_finance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="DETAILS"
        android:id="@+id/button_details"
        android:layout_below="@+id/button_expense"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
